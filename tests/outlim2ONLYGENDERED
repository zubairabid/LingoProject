MESSAGE TYPE :::: MESSAGE TYPE UNMARKED
UID :::: 162308
SUBJECT :::: SUBJECT UNMARKED
KEY(s) :::: ['he', 'his', 'him']
SENDER :::: 3364
RECEIVERS :::: [29535, 5355, 7320, 3720, 742, 27095, 83264, 101554, 27095]
