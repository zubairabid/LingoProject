SUBJECT :::: Real Estate Investment - Shawn Gross
KEY(s) :::: ['he', 'his', 'him']
SENDER :::: 12826
RECEIVERS :::: [36032, 98696, 76141, 40164, 31839, 84056, 117870, 36032, 117227, 98696, 70196, 76141, 40164, 48153, 31839, 70196, 84056, 40264]
